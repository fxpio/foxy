{
    "name": "php-forge/foxy",
    "description": "Fast, reliable, and secure NPM/Yarn/pnpm bridge for Composer",
    "keywords": ["npm", "yarn", "composer", "bridge", "dependency manager", "package", "asset", "nodejs"],
    "homepage": "https://github.com/fxpio/foxy",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Fran√ßois Pluchino",
            "email": "francois.pluchino@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.0.0",
        "phpunit/phpunit": "^9.5.10",
        "vimeo/psalm": "^5.20"
        
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Foxy\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Foxy\\Tests\\": "tests"
        }
    },    
    "extra": {
        "class": "Foxy\\Foxy",
        "branch-alias": {
            "dev-main": "1.2-dev"
        }
    }
}
